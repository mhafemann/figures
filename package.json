{
  "name": "@mhafemann/figures",
  "version": "1.0.0",
  "keywords": [
    "symbols",
    "glyphs",
    "unicode"
  ],
  "type": "module",
  "description": "This package provides Unicode symbols with Windows-compatible fallbacks.",
  "main": "dist/index.js",
  "module": "src/index.js",
  "typings": "types",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./types/*": "./types/*"
  },
  "author": {
    "name": "Mark Hafemann",
    "email": "markhafemann1@gmail.com"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "esbuild src/index.js --bundle --external:process --platform=node --target=node16 --outfile=dist/index.cjs",
    "postbuild": "agadoo src/index.js",
    "pretypes": "rm -rf types && mkdir types",
    "types": "tsc"
  },
  "devDependencies": {
    "@types/node": "^20.2.1",
    "agadoo": "^3.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.19",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6",
    "prettier": "^2.8.7",
    "prettier-plugin-jsdoc": "^0.4.2"
  }
}
