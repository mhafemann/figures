{
  "name": "@mhafemann/figures",
  "version": "1.0.2",
  "keywords": [
    "symbols",
    "glyphs",
    "unicode"
  ],
  "type": "module",
  "description": "This package provides Unicode symbols with Windows-compatible fallbacks.",
  "main": "dist/index.js",
  "module": "src/index.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./src/index.js",
      "require": "./dist/index.cjs"
    },
    "./package.json": "./package.json",
    "./types/*": "./types/*"
  },
  "files": [
    "src",
    "dist",
    "types"
  ],
  "author": {
    "name": "Mark Hafemann",
    "email": "markhafemann1@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mhafemann/figures.git"
  },
  "scripts": {
    "prebuild": "rm -rf dist && mkdir dist",
    "build": "esbuild src/index.js --bundle --external:process --platform=node --target=node16 --outfile=dist/index.cjs",
    "postbuild": "agadoo src/index.js",
    "pretypes": "rm -rf types && mkdir types",
    "types": "tsc",
    "prepublishOnly": "npm run build && npm run types && git log --pretty='- %s' > CHANGELOG.md"
  },
  "devDependencies": {
    "@types/node": "^20.2.1",
    "agadoo": "^3.0.0",
    "dotenv": "^16.0.3",
    "esbuild": "^0.17.19",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6",
    "prettier": "^2.8.7",
    "prettier-plugin-jsdoc": "^0.4.2"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
